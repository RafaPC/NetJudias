<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    
    <xs:element name="polideportivo">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="actividades">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="actividad">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="tipo" type="xs:string"/>
                                        <xs:element name="plazaslibres" type="xs:Integer"/>
                                        <xs:element name="plazas" type="xs:Integer"/>
                                        <xs:element name="precio" type="xs:float"/>
                                        <xs:element name="alumno">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="nombre" type="xs:string"/>
                                                    <xs:element name="apellidos" type="xs:string"/>
                                                    <xs:element name="pago" type="xs:float"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="horario">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="dias" type="xs:string"/>
                                                    <xs:element name="horacomienzo" type="xs:Integer"/>
                                                    <xs:element name="horafinal" type="xs:Integer"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="alumno">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nombre" type="xs:string"/>
                            <xs:element name="apellidos" type="xs:string"/>
                            <xs:element name="pago" type="xs:float"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
