<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <xs:element name="biblioteca">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="usuarios">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="usuario">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="nombre" type="xs:string"/>
                                        <xs:element name="numLibros" type="xs:Integer"/>
                                        <xs:element name="libro" maxOccurs="3">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="isb" type="xs:string"/>
                                                    <xs:element name="titulo" type="xs:string"/>
                                                    <xs:element name="autor" type="xs:string"/>
                                                    <xs:element name="numpaginas" type="xs:int"/>
                                                    <xs:element name="prestado" type="xs:boolean"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="libros">
                    <xs:complexType>
                        <xs:element name="libro" maxOccurs="unBounded">
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="isb" type="xs:string"/>
                                    <xs:element name="titulo" type="xs:string"/>
                                    <xs:element name="autor" type="xs:string"/>
                                    <xs:element name="numpaginas" type="int"/>
                                    <xs:element name="prestado" type="boolean"/>
                                </xs:sequence>
                            </xs:complexType>
                        </xs:element>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
